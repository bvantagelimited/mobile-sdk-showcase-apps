<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    >

    <StackLayout
        ohos:height="200vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        >

        <DirectionalLayout
            ohos:height="500px"
            ohos:width="match_content"
            ohos:orientation="vertical"
            >


            <Text
                ohos:id="$+id:mainTitle"
                ohos:height="30vp"
                ohos:width="match_content"
                ohos:end_margin="25vp"
                ohos:start_margin="25vp"
                ohos:text="IPification "
                ohos:text_alignment="start"
                ohos:text_color="#000"
                ohos:text_font="sans-serif-condensed"
                ohos:text_size="80"
                ohos:text_weight="400"
                ohos:top_margin="50vp"
                >

            </Text>

            <Text
                ohos:id="$+id:mainTitle0"
                ohos:height="30vp"
                ohos:width="match_content"
                ohos:end_margin="25vp"
                ohos:start_margin="25vp"
                ohos:text="features"
                ohos:text_alignment="start"
                ohos:text_color="#000"
                ohos:text_font="sans-serif-condensed"
                ohos:text_size="80"
                ohos:text_weight="400"
                >

            </Text>

            <Text
                ohos:id="$+id:mainTitle1"
                ohos:height="30vp"
                ohos:width="match_content"
                ohos:bottom_margin="30vp"
                ohos:end_margin="25vp"
                ohos:start_margin="25vp"
                ohos:text="showcase"
                ohos:text_alignment="start"
                ohos:text_color="#000"
                ohos:text_font="sans-serif-condensed"
                ohos:text_size="80"
                ohos:text_weight="400"
                >

            </Text>
        </DirectionalLayout>

        <RadioContainer
            ohos:id="$+id:radio_container"
            ohos:height="match_content"
            ohos:width="match_content"

            ohos:layout_alignment="right"
            ohos:left_margin="4vp"
            ohos:orientation="horizontal"
            ohos:right_margin="25vp"
            ohos:top_margin="50vp">

            <RadioButton
                ohos:id="$+id:radio_button_1"
                ohos:height="40vp"
                ohos:width="match_content"
                ohos:text="Stage"
                ohos:text_color_on="#0F2CD3"
                ohos:text_size="16fp"/>

            <RadioButton
                ohos:id="$+id:radio_button_2"
                ohos:height="40vp"
                ohos:width="match_content"
                ohos:left_margin="10vp"
                ohos:text="Live"
                ohos:text_color_on="#0F2CD3"
                ohos:text_size="16fp"/>

        </RadioContainer>

    </StackLayout>

    <DirectionalLayout
        ohos:height="300vp"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:top_margin="50vp"
        >

        <Button
            ohos:id="$+id:button1"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:background_element="$graphic:button_background"
            ohos:bottom_margin="15vp"
            ohos:text_color="#ffffff"
            ohos:right_margin="15vp"
            ohos:left_margin="15vp"
            ohos:left_padding="8vp"
            ohos:right_padding="8vp"
            ohos:text="Phone Number Verification"
            ohos:text_size="16fp"
            />

        <Button
            ohos:id="$+id:button2"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:background_element="$graphic:button_background"
            ohos:bottom_margin="15vp"
            ohos:left_margin="15vp"
            ohos:right_margin="15vp"
            ohos:left_padding="8vp"
            ohos:right_padding="8vp"
            ohos:text="Login - Quick Access"
            ohos:text_size="16fp"
            ohos:text_color="#ffffff"
            />

        <Button
            ohos:id="$+id:button3"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:background_element="$graphic:button_background"
            ohos:bottom_margin="15vp"

            ohos:left_margin="15vp"
            ohos:left_padding="8vp"
            ohos:right_margin="15vp"
            ohos:right_padding="8vp"
            ohos:text="Anonymous Identity"
            ohos:text_size="16fp"
            ohos:text_color="#ffffff"
            />
    </DirectionalLayout>
</DirectionalLayout>
